{
  "description": "Livraria de componentes da moderniza",
  "author": "lucas de Oliveira Neitzke",
  "license": "MIT",
  "name": "@renan.moderniza/moderniza-components",
  "version": "0.12.41",
  "private": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moderniza-modershop/moderniza-components.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "engines": {
    "node": ">=14",
    "npm": ">=5"
  },
  "scripts": {
    "prepare:build": "npm run jsx:to:js && npm run lint:fix",
    "build": "npm run prepare:build && npm run build:bundle && npm run post:build",
    "build:bundle": "rollup -c",
    "post:build": "node post-build.js",
    "prepare:preview": "npm run js:to:jsx && cd preview && npm run dev",
    "start": "npm run prepare:preview",
    "start:bundle": "rollup -c -w",
    "lint:fix": "eslint lib/**/*.js --fix",
    "jsx:to:js": "cd lib && jsx_to_js.bat",
    "js:to:jsx": "cd lib && js_to_jsx.bat",
    "build:theme": "npm run theme:light && npm run theme:dark",
    "theme:light": "sass --update sass/primereact/themes/bootstrap4/bootstrap4-light/purple/theme.scss:css/primereact/light/theme.css",
    "theme:dark": "sass --update sass/primereact/themes/bootstrap4/bootstrap4-dark/purple/theme.scss:css/primereact/dark/theme.css",
    "publish:repo": "npm version patch && git push && npm publish && exit"
  },
  "peerDependencies": {
    "prop-types": "^15.0.0",
    "react": "^18.0.0 || ^17.0.0 || ^16.0.0 || ^15.0.0",
    "react-dom": "^18.0.0 || ^17.0.0 | ^16.0.0 || ^15.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.5",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "cross-env": "^5.1.4",
    "eslint": "^5.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-config-standard-react": "^6.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "file-saver": "^2.0.5",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.29",
    "minify": "^10.2.0",
    "node-sass": "^9.0.0",
    "primeicons": "^6.0.1",
    "primereact": "^10.6.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "^4.0.2",
    "reactstrap": "^9.0.1",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-threads": "^1.2.0",
    "rollup-plugin-url": "^1.4.0",
    "xlsx": "^0.18.5"
  },
  "files": [
    "dist",
    "dist/*.js",
    "dist/*.css",
    "css",
    "css/*.css"
  ],
  "dependencies": {}
}
